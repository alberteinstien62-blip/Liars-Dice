# Liars-Dice Environment Configuration
# Copy this file to .env and customize values as needed

# Docker image for Linera development environment
LINERA_IMAGE=kvozt/linera-dev:latest

# Logging level (trace, debug, info, warn, error)
RUST_LOG=info

# Linera network configuration
PRNG_SEED=37
INITIAL_CHAINS=3
FAUCET_PORT=8080
NETWORK_READY_TIMEOUT=180

# Bankroll configuration
BONUS_AMOUNT=25000

# Service ports (GraphQL endpoints)
SERVICE_PORT_A=8081
SERVICE_PORT_B=8082
LOBBY_SERVICE_PORT=8083

# Frontend ports (HTTP servers)
FRONTEND_PORT_A=5173
FRONTEND_PORT_B=5174

